#!/usr/bin/env bash
# Bash script that redirects to another page
apt-get -y update
apt-get -y install nginx
echo "Holberton School" | sudo tee /var/www/html/index.html
sudo /etc/init.d/nginx start
sudo sed -i "37i location /redirect_me {\n return 301 Moved Permanently https://www.youtube.com/watch?v=QH2-TGUlwu4; n}n" /etc/nginx/sites-available/default
service nginx restart
